<!DOCTYPE html>
<html lang="en">
  <% if (successMessages.length> 0) { %>
  <div class="flash-success">
    <% successMessages.forEach(msg=> { %>
    <p><%= msg %></p>
    <% }) %>
  </div>
  <% } %> <% if (errorMessages.length> 0) { %>
  <div class="flash-error">
    <% errorMessages.forEach(msg=> { %>
    <p><%= msg %></p>
    <% }) %>
  </div>
  <% } %>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />

    <title>Token Marketplace</title>
  </head>
  <body>
    <header class="navbar">
      <a href="/">
        <img src="/pics/logo.jpg" alt=" Marketplace Logo" />
      </a>
      <h1 class="navbar-title">Token Marketplace</h1>

      <div class="search-container">
        <form action="/items" method="GET" id="search-form">
          <input
            type="text"
            id="searchInput"
            class="search-bar"
            name="keyword"
            placeholder="Search items..."
            required
          />
          <button type="submit">Search</button>
        </form>
        <div id="searchResults"></div>
      </div>

      <nav class="navbar-links">
        <a href="/">Home</a>
        <a href="/items">Browse</a>
        <a href="/items/new">Sell</a>

        <% if (!user) { %>
        <a href="/users/new">Sign Up</a>
        <a href="/users/login">Login</a>
        <% } else { %>
        <a href="/users/profile">Profile</a>
        <a href="/users/logout">Logout</a>
        <% } %>
      </nav>
    </header>
  </body>
</html>
